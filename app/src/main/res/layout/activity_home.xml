<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:padding="20dp">


    <TextView
        android:id="@+id/nameHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Hola, "
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/numberBooksHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cantidad de libros leÃ­dos:"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/nameHome"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/searchBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_search"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberBooksHome"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_search"
        android:drawableEnd="@drawable/ic_clouse"
        android:hint="Libro, autor/a"
        android:textSize="16sp"
        android:padding="15dp"
        android:drawablePadding="8dp"
        />

    
</androidx.constraintlayout.widget.ConstraintLayout>